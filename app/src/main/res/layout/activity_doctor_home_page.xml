<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.voodoo.PRMS_MiBand.Doctor_homePage">

    <android.support.v7.widget.Toolbar
        android:id="@+id/doctor_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_alignParentStart="true"
        android:titleTextColor="#ffffff"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Welcome"
        android:textColor="#b3325e"
        android:id="@+id/Doctor_WelcomeText"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/doctor_toolbar"
        android:layout_alignParentStart="true" />

    <ListView
        android:id="@+id/DoctorlistView"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:layout_alignStart="@+id/Doctor_WelcomeText"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/Doctor_WelcomeText">
    </ListView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="List of Patients"
        android:textColor="#b3325e"
        android:id="@+id/textView12"
        android:layout_below="@+id/Doctor_WelcomeText"
        android:layout_alignStart="@+id/DoctorlistView"
        android:layout_marginTop="21dp" />


</RelativeLayout>
