<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginPage"
>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:src="@drawable/ambloginimg"
        android:layout_above="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/editUsername"
        android:hint="Enter Username"
        android:textColorHint="#b3325e"
        android:textColor="#ffffff"
        android:background="@android:color/transparent"
        android:singleLine="true"
        android:layout_marginTop="64dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/logintext"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editPassword"
        android:hint="Enter Password"
        android:textColorHint="#b3325e"
        android:background="@android:color/transparent"
        android:textColor="#ffffff"
        android:layout_below="@+id/editUsername"
        android:layout_alignStart="@+id/editUsername"
        android:layout_marginTop="31dp"
        android:layout_alignEnd="@+id/editUsername" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Login"
        android:textColor="#ffffff"
        android:background="#b3325e"
        android:id="@+id/Loginbutton"
        android:layout_alignTop="@+id/editPassword"
        android:layout_marginTop="70dp"
        android:layout_alignEnd="@+id/editPassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Username or Password is not valid"
        android:textColor="#ff0000"
        android:visibility="invisible"
        android:id="@+id/LoginErrorText"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Register"
        android:id="@+id/RegisterButton"
        android:textColor="#ffffff"
        android:background="#b3325e"
        android:layout_alignTop="@+id/editPassword"
        android:layout_marginTop="70dp"
        android:layout_alignRight="@+id/Loginbutton"
        android:layout_marginRight="120dp"/>

</RelativeLayout>
