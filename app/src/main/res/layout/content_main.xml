<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:showIn="@layout/activity_prms_main">


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PairedDeviceListView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="180dp"
        android:paddingStart="?android:attr/listPreferredItemPaddingStart"
        android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
        android:paddingLeft="?android:attr/listPreferredItemPaddingLeft"
        android:paddingRight="?android:attr/listPreferredItemPaddingRight"
        android:minHeight="200dp"
        android:layout_marginBottom="220dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="List of Paired Devices"
        android:textColor="#b3325e"
        android:id="@+id/textView3"
        android:layout_marginTop="30dp"

        android:layout_marginLeft="20dp"
        android:layout_below="@+id/EditDetailsbutton"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Patient Id : 23483"
        android:textColor="#b3325e"
        android:id="@+id/PatientIdText"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="Edit Patient Details"
        android:textColor="#ffffff"
        android:background="#b3325e"
        android:textSize="10sp"
        android:id="@+id/EditDetailsbutton"
        android:layout_alignTop="@+id/PatientIdText"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Last Measured Heart Rate : "
        android:visibility="invisible"
        android:textColor="#b3325e"
        android:id="@+id/last_measured_hr"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView3" />

</RelativeLayout>
