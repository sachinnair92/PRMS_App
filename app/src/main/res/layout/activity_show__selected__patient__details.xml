<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Show_Selected_Patient_Details">

    <android.support.v7.widget.Toolbar
        android:id="@+id/show_patient_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_alignParentStart="true"
        android:titleTextColor="#ffffff"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Patient Name: "
        android:id="@+id/textView5"
        android:layout_marginTop="36dp"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="70dp"
        android:layout_below="@+id/show_patient_toolbar"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Patient Id: "
        android:id="@+id/textView6"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Gender:"
        android:id="@+id/textView11"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Blood Grp: "
        android:id="@+id/textView13"
        android:layout_below="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Condition: "
        android:id="@+id/textView14"
        android:layout_below="@+id/textView13"
        android:layout_alignEnd="@+id/textView6"
        android:layout_marginTop="21dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Problem: "
        android:id="@+id/textView15"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/textView16"
        android:layout_alignStart="@+id/textView16" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Police Case: "
        android:id="@+id/textView16"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/textView14"
        android:layout_alignStart="@+id/textView14" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Problem"
        android:textColor="#b3325e"
        android:id="@+id/show_problem"
        android:layout_alignTop="@+id/textView15"
        android:layout_toEndOf="@+id/textView13" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/measureheartrate_image"
        android:src="@drawable/pulse"
        android:layout_marginRight="40dp"
        android:textColor="#b3325e"
        android:layout_above="@+id/textView18"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="  Measure\n Heartrate "
        android:id="@+id/textView18"
        android:textColor="#b3325e"
        android:layout_marginRight="32dp"
        android:layout_alignTop="@+id/textView19"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/sendmessage_image"
        android:src="@drawable/message"
        android:layout_alignTop="@+id/measureheartrate_image"
        android:layout_alignStart="@+id/textView19"
        android:layout_marginStart="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="       Message\n Ambulance Staff"
        android:textColor="#b3325e"
        android:id="@+id/textView19"
        android:layout_marginBottom="17dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView11" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Patient Name"
        android:textColor="#b3325e"
        android:id="@+id/show_patient_name"
        android:layout_alignTop="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Patient Id"
        android:textColor="#b3325e"
        android:id="@+id/show_patient_id"
        android:layout_alignTop="@+id/textView6"
        android:layout_toEndOf="@+id/textView13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Gender"
        android:textColor="#b3325e"
        android:id="@+id/show_gender"
        android:layout_alignTop="@+id/textView11"
        android:layout_toEndOf="@+id/textView15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Blood Grp"
        android:textColor="#b3325e"
        android:id="@+id/show_bloodgrp"
        android:layout_alignTop="@+id/textView13"
        android:layout_toEndOf="@+id/textView13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Condition"
        android:textColor="#b3325e"
        android:id="@+id/show_condition"
        android:layout_alignTop="@+id/textView14"
        android:layout_toEndOf="@+id/textView13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Police Case"
        android:textColor="#b3325e"
        android:id="@+id/show_policecase"
        android:layout_alignTop="@+id/textView16"
        android:layout_toEndOf="@+id/textView16" />


</RelativeLayout>
